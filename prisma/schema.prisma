generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// ── NextAuth models ───────────────────────────────────────────────────────────

model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? @db.Text
    access_token      String? @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? @db.Text
    session_state     String?

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

// ── User ─────────────────────────────────────────────────────────────────────

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    passwordHash  String?

    accounts         Account[]
    sessions         Session[]
    templates        Template[]
    blockDefinitions BlockDefinition[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

// ── Templates ─────────────────────────────────────────────────────────────────

model Template {
    id        String   @id @default(cuid())
    ownerId   String
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    blocks TemplateBlock[]
    owner  User            @relation(fields: [ownerId], references: [id], onDelete: Cascade)

    @@index([ownerId])
}

model TemplateBlock {
    id            String      @id @default(cuid())
    templateId    String
    order         Int
    title         String
    sourceType    BlockSource
    sourceBlockId String?

    fields   TemplateField[]
    template Template        @relation(fields: [templateId], references: [id], onDelete: Cascade)

    @@index([templateId])
}

model TemplateField {
    id              String    @id @default(cuid())
    templateBlockId String
    order           Int
    key             String
    label           String?
    fieldType       FieldType @default(TEXT)
    required        Boolean   @default(false)

    templateBlock TemplateBlock @relation(fields: [templateBlockId], references: [id], onDelete: Cascade)

    @@index([templateBlockId])
}

// ── Block Library ─────────────────────────────────────────────────────────────

model BlockDefinition {
    id        String   @id @default(cuid())
    ownerId   String?
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    fields BlockFieldDefinition[]
    owner  User?                  @relation(fields: [ownerId], references: [id], onDelete: Cascade)

    @@index([ownerId])
}

model BlockFieldDefinition {
    id        String    @id @default(cuid())
    blockId   String
    order     Int
    key       String
    label     String?
    fieldType FieldType @default(TEXT)
    required  Boolean   @default(false)

    block BlockDefinition @relation(fields: [blockId], references: [id], onDelete: Cascade)

    @@index([blockId])
}

// ── Enums ─────────────────────────────────────────────────────────────────────

enum BlockSource {
    SYSTEM
    USER
    CUSTOM_INLINE
}

enum FieldType {
    TEXT
    NUMBER
    DATE
    EMAIL
    PHONE
    TEXTAREA
    SELECT
}
